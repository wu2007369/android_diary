<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <View
        android:id="@+id/top_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.72"
        app:layout_constraintDimensionRatio="270:165"
        app:layout_constraintVertical_bias="0.3"
        android:background="@drawable/shape_round_corners_top_27_white"
        />
    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/top_bg"
        app:layout_constraintBottom_toBottomOf="@id/top_bg"
        app:layout_constraintVertical_bias="0.45"
        />

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/bottom_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/line_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/top_bg"
        app:layout_constraintRight_toRightOf="@id/top_bg"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintDimensionRatio="270:274"
        app:layout_constraintVertical_bias="0"
        android:src="@drawable/bg_verification_scan_code_order"
        />

    <ImageView
        android:id="@+id/top_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/line_2"
        app:layout_constraintLeft_toLeftOf="@id/top_bg"
        app:layout_constraintRight_toRightOf="@id/top_bg"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintDimensionRatio="117:55"
        android:src="@drawable/icon_choose_mall_title_market"
        />

    <TextView
        android:id="@+id/tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_logo"
        app:layout_constraintLeft_toLeftOf="@id/top_logo"
        app:layout_constraintRight_toRightOf="@id/top_logo"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="该二维码仅供超市扫码购核销使用"
        />

    <ImageView
        android:id="@+id/barcode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tip1"
        app:layout_constraintBottom_toTopOf="@id/line_3"
        app:layout_constraintLeft_toLeftOf="@id/top_bg"
        app:layout_constraintRight_toRightOf="@id/top_bg"
        app:layout_constraintWidth_percent="0.4"

        app:layout_constraintDimensionRatio="1:1"
        />
    <View
        android:id="@+id/line_3"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="@id/bottom_bg"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bg"
        app:layout_constraintLeft_toLeftOf="@id/bottom_bg"
        app:layout_constraintRight_toRightOf="@id/bottom_bg"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintVertical_bias="0.77"
        android:background="@drawable/dotted_line"
        />

    <TextView
        android:id="@+id/tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/line_3"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bg"
        app:layout_constraintLeft_toLeftOf="@id/top_logo"
        app:layout_constraintRight_toRightOf="@id/top_logo"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="该二维码仅供超市扫码购核销使用"
        />

</androidx.constraintlayout.widget.ConstraintLayout>