<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <RelativeLayout
        android:id="@+id/home_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_text"
            android:layout_alignStart="@id/tv_text"
            android:layout_alignEnd="@id/tv_text"
            android:layout_marginTop="-7dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/base_icon_indicator_corner_rect" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="2dp"
            android:text="推荐"
            android:textColor="@color/color_FF6633"
            android:textSize="15sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/home_tab_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/home_tab_image_normal"
            android:layout_width="wrap_content"
            android:layout_height="17dp" />

        <ImageView
            android:id="@+id/home_tab_image_big"
            android:layout_width="wrap_content"
            android:layout_height="21dp"/>

    </FrameLayout>



</RelativeLayout>